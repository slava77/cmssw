<?xml version="1.0" encoding="UTF-8"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">
    <ConstantsSection label="PPS_Timing_Positive_Station.xml">
        <!--Positions calculated from the wall closer to IP point-->
        <Constant name="PPS_Timing_Device_PPS_Timing_Hole_Diam" value="150*mm"/>
        <Constant name="PPS_Timing_Device_Beam_Hole_Diam" value="80*mm"/>
        <Constant name="PPS_Timing_Device_Wall_Thickness" value="2*mm"/>
        <Constant name="PPS_Timing_Device_Length_z" value="180*mm"/>
        <Constant name="PPS_Timing_Device_Length_y" value="112*mm"/>
        <Constant name="PPS_Timing_Device_Det_Bellow_Length" value="93.7*mm"/>
        <Constant name="PPS_Timing_Device_Envelope_Radius" value="450*mm"/>

        <Constant name="PPS_Timing_Positive_Station_Length" value="3360*mm"/>
        <Constant name="PPS_Timing_Positive_Station_Pipe_Length" value="1605*mm"/>
       <Constant name="PPS_Timing_Device_Hor_Closed_Wall_Thick_Ext" value="2*mm"/>
        <Constant name="PPS_Timing_Device_Hor_Closed_Wall_Thick_Int" value="2*mm"/>
        <Constant name="PPS_Timing_Device_Hor_PPS_Timing_Section_Tot_Length" value="[PPS_Timing_Device_Length_y]+[PPS_Timing_Device_Det_Bellow_Length]+[PPS_Timing_Device_Hor_Closed_Wall_Thick_Ext]"/>
        
        <Constant name="PPS_Timing_Positive_Hor_Vac_Length" value="[PPS_Timing_Device_Envelope_Radius]+[PPS_Timing_Device_Length_y]/2-[PPS_Timing_Device_Hor_Closed_Wall_Thick_Int]"/>
    </ConstantsSection>
    
    <SolidSection label="PPS_Timing_Positive_Station.xml">  
        <Tube rMin="0*mm" rMax="[PPS_Timing_Device_Envelope_Radius]*1.1" dz="[PPS_Timing_Positive_Station_Length]/2" name="PPS_Timing_Positive_Station"/>
        <Tube rMin="[PPS_Timing_Device_Beam_Hole_Diam]/2" rMax="[PPS_Timing_Device_Beam_Hole_Diam]/2+[PPS_Timing_Device_Wall_Thickness]" dz="[PPS_Timing_Positive_Station_Pipe_Length]/2" name="PPS_Timing_Positive_Station_Tube_1"/>
        <Tube rMin="[PPS_Timing_Device_Beam_Hole_Diam]/2" rMax="[PPS_Timing_Device_Beam_Hole_Diam]/2+[PPS_Timing_Device_Wall_Thickness]" dz="[PPS_Timing_Positive_Station_Pipe_Length]/2" name="PPS_Timing_Positive_Station_Tube_2"/>
        <Tube rMin="0*mm" rMax="[PPS_Timing_Device_Beam_Hole_Diam]/2" dz="[PPS_Timing_Positive_Station_Length]/2" name="PPS_Timing_Positive_Station_Vacuum_1"/>
        <Tube rMin="0*mm" rMax="[PPS_Timing_Device_PPS_Timing_Hole_Diam]/2" dz="[PPS_Timing_Positive_Hor_Vac_Length]/2" name="PPS_Timing_Positive_Station_Hor_Vacuum"/>
        <UnionSolid name="PPS_Timing_Positive_Station_Vacuum_4">
            <rSolid name="PPS_Timing_Positive_Station_Vacuum_1"/>
            <rSolid name="PPS_Timing_Positive_Station_Hor_Vacuum"/>
            <rRotation name="PPS_Timing_Transformations:PPS_Timing_y_90_rot"/>
            <Translation x="-(-[PPS_Timing_Positive_Hor_Vac_Length]/2+[PPS_Timing_Device_Length_y]/2-[PPS_Timing_Device_Hor_Closed_Wall_Thick_Int])" y="0*mm" z="0"/>
        </UnionSolid>
    </SolidSection>
    
    <LogicalPartSection label="PPS_Timing_Positive_Station.xml">
        <LogicalPart name="PPS_Timing_Positive_Station">
            <rSolid name="PPS_Timing_Positive_Station"/>
            <rMaterial name="PPS_Timing_Materials:Air"/>
        </LogicalPart>
        <LogicalPart name="PPS_Timing_Positive_Station_Tube_1">
            <rSolid name="PPS_Timing_Positive_Station_Tube_1"/>
            <rMaterial name="PPS_Timing_Materials:AISI-316L-Steel"/>
        </LogicalPart>
        <LogicalPart name="PPS_Timing_Positive_Station_Tube_2">
            <rSolid name="PPS_Timing_Positive_Station_Tube_2"/>
            <rMaterial name="PPS_Timing_Materials:AISI-316L-Steel"/>
        </LogicalPart>
        <LogicalPart name="PPS_Timing_Positive_Station_Vacuum_4">
            <rSolid name="PPS_Timing_Positive_Station_Vacuum_4"/>
            <rMaterial name="PPS_Timing_Materials:PPS_Timing_Primary_Vacuum"/>
        </LogicalPart>
    </LogicalPartSection>
    
    <PosPartSection label="PPS_Timing_Positive_Station.xml">

<PosPart copyNumber="110">
     <rParent name="PPS_Timing_Positive_Station_Vacuum_4"/>
     <rChild name="PPS_Timing_Box_Positive:PPS_Timing_Cylinder_Primary_Vacuum"/>
        <rRotation name="PPS_Timing_Transformations:PPS_Timing_90_x_90_y_rot"/>
        <Translation x="[PPS_Timing_Horizontal_Pot:height]/2+[PPS_Timing_Cylinder_XDistance_From_Beam:Cylinder_beam_distance]" y="0*m " z="0*m " />
</PosPart>


        <PosPart>
            <rParent name="PPS_Timing_Positive_Station"/>
            <rChild name="PPS_Timing_Positive_Station_Tube_1"/>
            <Translation x="0*mm" y="0*mm" z="-[PPS_Timing_Positive_Station_Length]/2+[PPS_Timing_Positive_Station_Pipe_Length]/2"/>
        </PosPart>
        <PosPart>
            <rParent name="PPS_Timing_Positive_Station"/>
            <rChild name="PPS_Timing_Positive_Station_Tube_2"/>
            <Translation x="0*mm" y="0*mm" z="[PPS_Timing_Positive_Station_Length]/2-[PPS_Timing_Positive_Station_Pipe_Length]/2"/>
        </PosPart>
        <PosPart>
            <rParent name="PPS_Timing_Positive_Station"/>
            <rChild name="PPS_Timing_Positive_Station_Vacuum_4"/>
        </PosPart>


    </PosPartSection>
</DDDefinition>
